{% if is_granted('ROLE_USER') %}
    <div class="modal fade" id="resetModal" tabindex="-1" role="dialog" aria-labelledby="resetModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title modal-title-upper" id="resetModalLabel">
                        {{ 'Reset Receiver'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="{{ path('app_admin_newsletter_job_subscribers_reset_receiver') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="modal-body">

                        <div class="form-group">
                            <p class="modal-info">
                                {{ 'Reset receiver means that the subscriber is ready to receive a new Newsletter.'|trans }}
                            </p>
                        </div>

                        <div class="form-group">
                            <p>{{ 'Sure to reset receivers?'|trans }}</p>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-light btn-radius-50"
                                data-dismiss="modal">{{ 'Cancel'|trans }}</button>
                        <button type="submit" class="btn btn-primary btn-radius-50">{{ 'Reset them'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endif %}