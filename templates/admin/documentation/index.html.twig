{% extends 'admin/layout/base.html.twig' %}

{% block title %} Dashboard {% endblock %}

{% block body %}

    <div class="content-wrapper">

        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">Dashboard</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Dashboard</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid area-section">

                <div class="row">
                    <div class="col-lg-12">

                        <h5>Send your Newsletter</h5>

                        <p class="text-secondary">
                            Get your Token from Newsletter then
                            {{ app.request.schemeAndHttpHost }}/send/newsletter/<small class="text-danger">TOKEN</small>
                        </p>

                        <hr>

                        <h5>CronJob</h5>
                        <code>

                            [Cron Service Trusted by the Pros](https://www.easycron.com/)<br>
                            [Examples](https://cron.help/examples)<br>
                            [CronHowto](https://help.ubuntu.com/community/CronHowto)<br>
                            <br>
                            ---
                            <br>
                            * $ systemctl status cron<br>
                            * $ systemctl start cron<br>
                            * $ systemctl stop cron<br>
                            * $ apt-get install cron<br>
                            * $ crontab -e //add cron job<br>
                            * $ crontab -l : List the all your cron jobs.<br>
                            * $ crontab -r : Delete the current cron jobs.<br>
                            <br>
                            ---
                            <br>
                            - Every 5min.<br>
                            * * * * * curl --request POST
                            'http://localhost:8080/send/newsletter/xxxxxxxxxxxxxxxxxxxxx'<br>
                            ---
                            <br>
                            <br>
                            * * * * * Every Minute<br>
                            */5 * * * * Every Five Minutes<br>
                            */10 * * * * Every 10 Minutes<br>
                            */15 * * * * Every 15 Minutes<br>
                            */30 * * * * Every 30 Minutes<br>
                        </code>
                    </div>
                </div>

                <div class="row">
                    <section class="col-lg-7 connectedSortable"></section>
                    <section class="col-lg-5 connectedSortable"></section>
                </div>
            </div>
        </section>
    </div>

{% endblock %}